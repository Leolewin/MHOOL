<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20px"
    tools:context="com.summer.mho.gem.GemActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:gravity="center"
                android:text="技能珠(0/6)"
                android:textSize="55px" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150px">

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="600px"
                    android:layout_height="match_parent"></Spinner>

                <TextView
                    android:layout_width="100px"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/spinner1"
                    android:gravity="center"
                    android:text="X" />

                <EditText
                    android:id="@+id/edit_text_1"
                    android:layout_width="340px"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:inputType="number"
                    android:text="0" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150px">

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="600px"
                    android:layout_height="match_parent"></Spinner>

                <TextView
                    android:layout_width="100px"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/spinner2"
                    android:gravity="center"
                    android:text="X" />

                <EditText
                    android:id="@+id/edit_text_2"
                    android:layout_width="340px"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:inputType="number"
                    android:text="0" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150px">

                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="600px"
                    android:layout_height="match_parent"></Spinner>

                <TextView
                    android:layout_width="100px"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/spinner3"
                    android:gravity="center"
                    android:text="X" />

                <EditText
                    android:id="@+id/edit_text_3"
                    android:layout_width="340px"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:inputType="number"
                    android:text="0" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150px">

                <Spinner
                    android:id="@+id/spinner4"
                    android:layout_width="600px"
                    android:layout_height="match_parent"></Spinner>

                <TextView
                    android:layout_width="100px"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/spinner4"
                    android:gravity="center"
                    android:text="X" />

                <EditText
                    android:id="@+id/edit_text_4"
                    android:layout_width="340px"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:inputType="number"
                    android:text="0" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150px">

                <Spinner
                    android:id="@+id/spinner5"
                    android:layout_width="600px"
                    android:layout_height="match_parent"></Spinner>

                <TextView
                    android:layout_width="100px"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/spinner5"
                    android:gravity="center"
                    android:text="X" />

                <EditText
                    android:id="@+id/edit_text_5"
                    android:layout_width="340px"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:singleLine="true"
                    android:inputType="number"
                    android:text="0" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_marginTop="100px">

                <Button
                    android:id="@+id/ok"
                    android:layout_width="300px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50px"
                    android:text="@string/ok" />

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="300px"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50px"
                    android:text="@string/cancel" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/ad_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></RelativeLayout>
</RelativeLayout>